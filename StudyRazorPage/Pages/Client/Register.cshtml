@page
@model StudyRazorPage.Pages.Client.RegisterModel
@section scripts{
    <!--Lấy dữ liệu bên validation-->
    <partial name="_Validation" /> 
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h2>Đăng kí tài khoản</h2>
           <!--Check thông báo lỗi-->
           <!--ModelOnly : bắt lỗi do mik tự tạo ra-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>   
            <div class="mt-3">
                <label class="form-label">Tên đăng nhập</label>
                <input asp-for="user.Username" class="form-control" />
                <span asp-validation-for="user.Username" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Mật khẩu</label>
                <input type="password" asp-for="user.Password" class="form-control" />
                <span asp-validation-for="user.Password" class="text-danger"></span>
            </div> <div class="mt-3">
                <label class="form-label">Nhập lại mật khẩu</label>
                <input type="password" asp-for="user.Cfm_Password" class="form-control" />
                <span asp-validation-for="user.Cfm_Password" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Số điện thoại</label>
                <input asp-for="user.Phone" class="form-control" />
                <span asp-validation-for="user.Phone" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Email</label>
                <input asp-for="user.Email" class="form-control" />
                <span asp-validation-for="user.Email" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Địa chỉ</label>
                <input asp-for="user.Address" class="form-control" />
                <span asp-validation-for="user.Address" class="text-danger"></span>

            </div> <div class="mt-3">
                <input type="submit" class="btn btn-success" value="Đăng kí tài khoản" />
            </div>
        </form>
    </div>
</div>
